<Page x:Class="WpfApp1.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите колличество секунд" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <TextBox Grid.Column="1" x:Name="Text1" Height="75" Width="350"/>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Height="85" Width="600" 
                 x:Name="Text2"/>
        <Button Click="Button_Click" Grid.Row="2" Grid.ColumnSpan="2" Content="Ответ" Height="75" Width="150" FontSize="20"/>
    </Grid>
</Page>
