<Page x:Class="WpfApp1.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите день" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="Text1" Height="80" Width="350"/>
        <TextBox Grid.Row="1" Grid.Column="0" x:Name="Text2" Height="80" Width="450" Grid.ColumnSpan="2"
                 VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
        <Button Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Ответ"
                Height="75" Width="150" FontSize="20" Click="Button_Click"/>
    </Grid>
</Page>
